<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_renderer_compact"
    android:weightSum="10" >

    <HorizontalScrollView
        android:id="@+id/gridView_renderer"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_margin="1dp"
        android:layout_weight="8"
        android:background="@drawable/bg_gridview_renderer_compact"
        android:padding="1dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/btn_quickPlayPause"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:clickable="true"
        android:src="@drawable/ic_btn_media_quickplay"
        android:scaleType="centerInside" />

</LinearLayout>