<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/bg_nowplaying_renderer_control"
    android:orientation="horizontal"
    android:padding="2dp"
    android:weightSum="2" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6" >

        <ImageView
            android:id="@+id/btn_prev"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_previous" />

        <ImageView
            android:id="@+id/btn_playPause"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_play" />

        <ImageView
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_stop" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_next" />

        <ImageView
            android:id="@+id/btn_fakeDropdown"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_changeitem" />

        <ImageView
            android:id="@+id/tv_playlistName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_changeplaylist" />

        <Spinner
            android:id="@+id/playlistItem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#000" />

        <Spinner
            android:id="@+id/spinner_playlist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#000"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:orientation="horizontal" >

            <SeekBar
                android:id="@+id/sb_duration"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_current"
                android:layout_width="56dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slash" />

            <TextView
                android:id="@+id/tv_max"
                android:layout_width="56dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/volume"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_volume" />

                <SeekBar
                    android:id="@+id/sb_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/volume"
                    android:layout_toRightOf="@id/volume" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>