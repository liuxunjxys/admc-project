<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/bg_homenetwork_toolbar"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4" >

        <ImageView
            android:id="@+id/btn_prev"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_previous" />

        <ImageView
            android:id="@+id/btn_playPause"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_play" />

        <ImageView
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_stop" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_btn_media_next" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_max"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <SeekBar
            android:id="@+id/sb_duration"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_max"
            android:layout_toRightOf="@id/tv_current" />
    </RelativeLayout>

</LinearLayout>