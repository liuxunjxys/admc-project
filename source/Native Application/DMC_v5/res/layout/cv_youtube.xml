<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" >

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:background="@drawable/ic_btn_search"
            android:scaleType="centerInside" />

        <EditText
            android:id="@+id/ed_query"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/btn_search"
            android:background="@drawable/bg_view_with_bottom_line"
            android:hint="@string/enter_keyword_here"
            android:inputType="text"
            android:maxLength="64"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/blue" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        style="@style/generic_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_homenetwork" >
    </ListView>

</LinearLayout>