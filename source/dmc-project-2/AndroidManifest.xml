<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.dlna.dmc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/remote_control"
        android:label="@string/app_name" >
        <activity
            android:name=".gui.devices.DMSListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.dms.DMSBrowserActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".gui.devices.DMRListActivity"
            android:label="@string/app_name" >
            <intent-filter
                android:icon="@drawable/play"
                android:label="Remote Digital Media Renderer" >
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="video/*" />
                <data android:mimeType="audio/*" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.dmr.DMRControllerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.app.dlna.dmc.gui.localcontent.BrowseLocalActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.app.dlna.dmc.gui.ytcontent.YoutubeContentActivity"
            android:label="@string/youtubeContent" >
            <intent-filter
                android:icon="@drawable/ic_launcher"
                android:label="Play On Remote Device" >
                <action android:name="android.intent.action.SEND" />
            </intent-filter>
        </activity>

        <service android:name=".processor.upnp.CoreUpnpService" >
        </service>
    </application>

</manifest>