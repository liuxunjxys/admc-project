<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/enter_link_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/enter_video_link_"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/youtube_link"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_link_label"
        android:inputType="text"
        android:maxLines="1"
        android:text="@string/youtube_predefine_link" />

    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/youtube_link"
        android:layout_centerHorizontal="true"
        android:onClick="onSubmitClick"
        android:text="@string/submit" />

    <CheckBox
        android:id="@+id/enable_proxy_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/submit"
        android:checked="true"
        android:text="@string/proxy_enable_text" />

</RelativeLayout>